#include <iostream>
using namespace std;

//fedeo 36
int main()
{
	int a = 10;
	
	cout << "a Value = " << a << endl;
	cout << "a Address = " << &a << endl;

	int* p;
	p = &a;
	cout << "Pointer value = " << p << endl;
	cout << "Value of address that p is pointing to is = " << *p << endl;
	
	*p = 20;
	cout << a << endl;
	cout <<*p << endl;

	*p = 30;
	cout << a << endl;
	cout << *p << endl;

	cout << endl;
}
